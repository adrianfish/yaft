    <version>1.0-SNAPSHOT</version>

	<parent>
    	<artifactId>base</artifactId>
    	<groupId>org.sakaiproject</groupId>
		<version>M2</version> <!--  for any 2.5.x version -->
        <!--<version>2.6-SNAPSHOT</version>--> <!--  for any 2.6 version -->
        <!--<version>2.7-SNAPSHOT</version>--> <!--  for any 2.7.x version -->
