  	<modules>
    	<module>api</module>
    	<module>impl</module>
    	<module>components</module>
    	<module>tool</module>
    	<module>assembly</module>
  	</modules>

	<profiles>

  		<profile>
            <!-- Binds to Sakai Kernel K1 - for Sakai 2.6.0+ -->
            <id>K1</id>
            <activation>
                <file>
                    <exists>../master/../kernel-deploy/pom.xml</exists>
                </file>
            </activation>
        </profile>

        <profile>
            <!-- Binds to Sakai pre Kernel K1 - for Sakai 2.4.x/2.5.x -->
            <id>pre-K1</id>
            <activation>
                <file>
                    <missing>../master/../kernel-deploy/pom.xml</missing>
                </file>
            </activation>
        </profile>

	</profiles>

	<issueManagement>
        <system>JIRA</system>
        <url>http://jira.sakaiproject.org/jira/browse/YAFT</url>
    </issueManagement>

	<scm>
        <connection>scm:svn:https://source.sakaiproject.org/contrib/yaft/trunk</connection>
        <developerConnection>scm:svn:https://source.sakaiproject.org/contrib/yaft/trunk</developerConnection>
        <url>https://source.sakaiproject.org/contrib/yaft/trunk</url>
    </scm>

</project>
